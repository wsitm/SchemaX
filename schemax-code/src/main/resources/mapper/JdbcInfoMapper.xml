<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wsitm.schemax.mapper.JdbcInfoMapper">
    <resultMap type="JdbcInfo" id="JdbcInfoResult">
        <result property="jdbcId" column="jdbc_id"/>
        <result property="jdbcName" column="jdbc_name"/>
        <result property="jdbcFile" column="jdbc_file"/>
        <result property="driverClass" column="driver_class"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectJdbcInfoVo">
        select jdbc_id, jdbc_name, jdbc_file, driver_class, create_time
        from dim_jdbc_info
    </sql>

    <select id="selectJdbcInfoList" parameterType="JdbcInfo" resultType="org.wsitm.schemax.entity.vo.JdbcInfoVo">
        <include refid="selectJdbcInfoVo"/>
        <where>
            <if test="jdbcName != null  and jdbcName != ''">
                and jdbc_name like concat('%', #{jdbcName}, '%')
            </if>
            <if test="jdbcFile != null  and jdbcFile != ''">
                and jdbc_file = #{jdbcFile}
            </if>
        </where>
    </select>

    <select id="selectJdbcInfoByJdbcId" parameterType="Integer" resultType="org.wsitm.schemax.entity.vo.JdbcInfoVo">
        <include refid="selectJdbcInfoVo"/>
        where jdbc_id = #{jdbcId}
    </select>

    <insert id="insertJdbcInfo" parameterType="JdbcInfo" useGeneratedKeys="true" keyProperty="jdbcId">
        insert into dim_jdbc_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="jdbcName != null">
                jdbc_name,
            </if>
            <if test="jdbcFile != null">
                jdbc_file,
            </if>
            <if test="driverClass != null">
                driver_class,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="jdbcName != null">
                #{jdbcName},
            </if>
            <if test="jdbcFile != null">
                #{jdbcFile},
            </if>
            <if test="driverClass != null">
                #{driverClass},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>

    <update id="updateJdbcInfo" parameterType="JdbcInfo">
        update dim_jdbc_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="jdbcName != null">
                jdbc_name = #{jdbcName},
            </if>
            <if test="jdbcFile != null">
                jdbc_file = #{jdbcFile},
            </if>
            <if test="driverClass != null">
                driver_class = #{driverClass},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </trim>
        where jdbc_id = #{jdbcId}
    </update>

    <delete id="deleteJdbcInfoByJdbcId" parameterType="Integer">
        delete
        from dim_jdbc_info
        where jdbc_id = #{jdbcId}
    </delete>

    <delete id="deleteJdbcInfoByJdbcIds">
        delete
        from dim_jdbc_info where jdbc_id in
        <foreach item="jdbcId" collection="array" open="(" separator="," close=")">
            #{jdbcId}
        </foreach>
    </delete>
</mapper>
