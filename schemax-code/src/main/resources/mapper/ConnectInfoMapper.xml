<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wsitm.schemax.mapper.ConnectInfoMapper">
    <resultMap type="ConnectInfo" id="ConnectInfoResult">
        <result property="connectId" column="connect_id"/>
        <result property="connectName" column="connect_name"/>
        <result property="jdbcId" column="jdbc_id"/>
        <result property="jdbcUrl" column="jdbc_url"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="filterType" column="filter_type"/>
        <result property="wildcard" column="wildcard"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectConnectInfoVo">
        select a.connect_id,
               a.connect_name,
               a.jdbc_id,
               a.jdbc_url,
               a.username,
               a.password,
               a.filter_type,
               a.wildcard,
               a.create_time,
               b.jdbc_name,
               b.driver_class,
               b.jdbc_file,
               c.table_count
        from dim_connect_info a
                 left join dim_jdbc_info b on a.jdbc_id = b.jdbc_id
                 left join (select connect_id, count(1) as table_count from dim_table_meta group by connect_id) c
                           on a.connect_id = c.connect_id
    </sql>

    <select id="selectConnectInfoList" parameterType="ConnectInfo"
            resultType="org.wsitm.schemax.entity.vo.ConnectInfoVO">
        <include refid="selectConnectInfoVo"/>
        <where>
            <if test="connectName != null  and connectName != ''">
                and a.connect_name like concat('%', #{connectName}, '%')
            </if>
            <if test="jdbcId != null">
                and a.jdbc_id = #{jdbcId}
            </if>
            <if test="jdbcUrl != null  and jdbcUrl != ''">
                and a.jdbc_url = #{jdbcUrl}
            </if>
            <if test="username != null  and username != ''">
                and a.username like concat('%', #{username}, '%')
            </if>
            <if test="password != null  and password != ''">
                and a.password = #{password}
            </if>
        </where>
    </select>

    <select id="selectConnectInfoByConnectId" parameterType="Integer"
            resultType="org.wsitm.schemax.entity.vo.ConnectInfoVO">
        <include refid="selectConnectInfoVo"/>
        where a.connect_id = #{connectId}
    </select>

    <insert id="insertConnectInfo" parameterType="ConnectInfo" useGeneratedKeys="true" keyProperty="connectId">
        insert into dim_connect_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="connectName != null and connectName != ''">
                connect_name,
            </if>
            <if test="jdbcId != null">
                jdbc_id,
            </if>
            <if test="jdbcUrl != null and jdbcUrl != ''">
                jdbc_url,
            </if>
            <if test="username != null and username != ''">
                username,
            </if>
            <if test="password != null and password != ''">
                password,
            </if>
            <if test="filterType != null">
                filter_type,
            </if>
            <if test="wildcard != null and wildcard != ''">
                wildcard,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="connectName != null and connectName != ''">
                #{connectName},
            </if>
            <if test="jdbcId != null">
                #{jdbcId},
            </if>
            <if test="jdbcUrl != null and jdbcUrl != ''">
                #{jdbcUrl},
            </if>
            <if test="username != null and username != ''">
                #{username},
            </if>
            <if test="password != null and password != ''">
                #{password},
            </if>
            <if test="filterType != null">
                #{filterType},
            </if>
            <if test="wildcard != null and wildcard != ''">
                #{wildcard},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>

    <update id="updateConnectInfo" parameterType="ConnectInfo">
        update dim_connect_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="connectName != null">
                connect_name = #{connectName},
            </if>
            <if test="jdbcId != null">
                jdbc_id = #{jdbcId},
            </if>
            <if test="jdbcUrl != null and jdbcUrl != ''">
                jdbc_url = #{jdbcUrl},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="filterType != null">
                filter_type = #{filterType},
            </if>
            <if test="wildcard != null and wildcard != ''">
                wildcard = #{wildcard},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </trim>
        where connect_id = #{connectId}
    </update>

    <delete id="deleteConnectInfoByConnectId" parameterType="Integer">
        delete
        from dim_connect_info
        where connect_id = #{connectId}
    </delete>

    <delete id="deleteConnectInfoByConnectIds">
        delete
        from dim_connect_info where connect_id in
        <foreach item="connectId" collection="array" open="(" separator="," close=")">
            #{connectId}
        </foreach>
    </delete>
</mapper>
